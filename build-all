#!/usr/bin/env bash
SCRIPT=$(readlink -f $0)
BASE=$(dirname $SCRIPT)

[ -f ${BASE}/build-sources ] && {
    echo '****************************************************************************************************'
    echo '** Building Sources                                                                               **'
    echo '****************************************************************************************************'
    ${BASE}/build-sources
}
[ -f ${BASE}/build-docker ] && {
    echo '****************************************************************************************************'
    echo '** Building Docker Image                                                                          **'
    echo '****************************************************************************************************'
    ${BASE}/build-docker
}
